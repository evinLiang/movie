
.coverImgUrls {
	height: 212rpx;
}
.coverImgUrls image {
	width: 100%;
	height: 212rpx;
	border-radius: 10rpx;
	-webkit-box-shadow: 0 0 10px hsla(0, 0%, 51%, .3);
	        box-shadow: 0 0 10px hsla(0, 0%, 51%, .3);
}
.playlistInfo .name {
	font-weight: bold;
	font-size: 32rpx;
}
.playlistInfo .description {
	margin-top: 6rpx;
	color: #999;
	font-size: 22rpx;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 3;
	overflow: hidden;
}
.privileges .item {
	background: #fff;
	border-radius: 10rpx;
	-webkit-box-shadow: 0 0 10px hsla(0, 0%, 51%, .3);
	        box-shadow: 0 0 10px hsla(0, 0%, 51%, .3);
	margin-top: 32rpx;
	padding: 20rpx 32rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.privileges .item .index {
	font-weight: bold;
	color: #666;
	margin-right: 32rpx;
	line-height: 94rpx;
	font-size: 48rpx;
	padding: 0rpx 10rpx;
}
.privileges .item .info {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	overflow: hidden;
}
.privileges .item .info .name {
	width: 100%;
	font-size: 34rpx;
	overflow: hidden;
	-o-text-overflow:ellipsis;
	   text-overflow:ellipsis;
	white-space:nowrap
}
.privileges .item .info .arName {
	font-size: 28rpx;
	color: #888;
}
.privileges .item .btn {
	margin-top: 20rpx;
	margin-left: 10rpx;
	width: 70rpx;
}
.privileges .item .btn text {
	display: inline-block;
	width: 10rpx;
	height: 10rpx;
	border-radius: 50%;
	background: #999;
	margin: 0rpx 5rpx;
}

