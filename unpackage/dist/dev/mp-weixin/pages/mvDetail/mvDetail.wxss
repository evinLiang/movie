
page {
  background: rgb(251, 251, 251);
}
.video ._video {
  width: 100%;
}
.videoInfo {
  padding-bottom: 40rpx;
}
.videoInfo .name {
  font-weight: bold;
  font-size: 34rpx;
}
.videoInfo .tips {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #999;
}
.videoInfo .tips .artistName {
  margin-left: 40rpx;
}
.videoInfo .desc {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 40rpx;
}
.simiMvList .item {
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 10px hsla(0, 0%, 51%, .2);
  margin-bottom: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.simiMvList .item .pic {
  width: 270rpx;
  height: 170rpx;
  margin-right: 30rpx;
}
.simiMvList .item .pic image {
  max-width: 100%;
  height: 170rpx;
  border-radius: 10rpx;
}
.simiMvList .item .info {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.simiMvList .item .info .name {
  margin-top: 25rpx;
  font-weight: bold;
  font-size: 30rpx;
  max-height: 86rpx;
  overflow: hidden;
}
.simiMvList .item .info .artistName {
  color: #999;
  font-size: 24rpx;
}
.simiMvList .item .btn {
  margin-top: 50rpx;
  margin-left: 10rpx;
  width: 85rpx;
}
.simiMvList .item .btn text {
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #999;
  margin: 0rpx 5rpx;
}