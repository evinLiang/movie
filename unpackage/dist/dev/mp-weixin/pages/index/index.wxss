
.page-panel {
  padding: 32rpx;
}
.page-title {
  font-size: 36rpx;
  padding: 25rpx 0rpx;
  font-weight: bold;
  color: rbga(72, 88, 162, 0.3);
}
.banner swiper {
  height: 236rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.banner swiper swiper-item {
  padding: 0rpx 5rpx;
  box-sizing: border-box;
}
.banner image {
  width: 100%;
  vertical-align: middle;
  border-radius: 10rpx;
  box-shadow: 0 0 10px hsla(0, 0%, 51%, .1);
}
.personalizedList,
.topMvList,
.toplistArtistList {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.personalizedList .item {
  position: relative;
  z-index: 1;
  width: 240rpx;
  height: 240rpx;
  margin-right: 12rpx;
}
.personalizedList .item .name {
  position: absolute;
  z-index: 2;
  color: #fff;
  left: 0rpx;
  bottom: 0rpx;
  font-size: 20rpx;
  padding: 10rpx;
  background: rgba(0, 0, 0, 0.3);
  width: 100%;
  min-height: 76rpx;
  box-sizing: border-box;
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}
.personalizedList .item image,
.topMvList .item image {
  max-width: 100%;
  height: 240rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10px hsla(0, 0%, 51%, .1);
}
.topMvList .item {
  position: relative;
  z-index: 1;
  width: 426rpx;
  height: 240rpx;
  margin-right: 12rpx;
}
.topMvList .item .name {
  position: absolute;
  z-index: 2;
  color: #fff;
  left: 0rpx;
  bottom: 0rpx;
  font-size: 10px;
  padding: 15rpx;
  background: rgba(0, 0, 0, 0.3);
  width: 100%;
  box-sizing: border-box;
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}
.topMvList .item .btn {
  position: absolute;
  z-index: 3;
  left: 30rpx;
  top: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
}
.topMvList .item .icon {
  margin: 26rpx 0rpx 0rpx 30rpx;
  width: 0;
  height: 0;
  border-top: 14rpx solid transparent;
  border-bottom: 14rpx solid transparent;
  border-left: 28rpx solid #e91e63;
  border-radius: 5rpx;
}
.toplistArtistList .item {
  position: relative;
  z-index: 1;
  width: 150rpx;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  margin-right: 12rpx;
}
.toplistArtistList .item image {
  max-width: 100%;
  height: 150rpx;
  border-radius: 50%;
  box-shadow: 0 0 10px hsla(0, 0%, 51%, .1);
}
.toplistArtistList .item .name {
  position: absolute;
  z-index: 2;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
  border-radius: 50%;
  font-size: 10px;
}
.djRecommendList .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 40rpx;
}
.djRecommendList .item image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10px hsla(0, 0%, 51%, .3);
}
.djRecommendList .item .content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.djRecommendList .item .content .name {
  font-size: 38rpx;
  font-weight: bold;
}
.djRecommendList .item .content .rcmdtext {
  margin-top: 10rpx;
  font-size: 28rpx;
}
.djRecommendList .item .content .info {
  margin-top: 30rpx;
  font-size: 20rpx;
  color: #999;
}
.djRecommendList .item .content .category {
  margin-left: 40rpx;
}