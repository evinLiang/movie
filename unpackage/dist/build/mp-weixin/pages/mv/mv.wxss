
.mvListT .item {
	position: relative;
	z-index: 1;
	overflow: hidden;
	height: 196rpx;
	margin-bottom: 25rpx;
	border-radius: 10rpx;
	-webkit-box-shadow: 0 0 10px hsla(0, 0%, 50%, 0.1);
	        box-shadow: 0 0 10px hsla(0, 0%, 50%, 0.1);
}
.mvListT .item .name {
	position: absolute;
	z-index: 2;
	left: 0;
	bottom: 0;
	width: 100%;
	color: #fff;
	font-size: 22rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding: 12rpx 16rpx;
	background: rgba(0, 0, 0, 0.5);
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
}
.mvListT .item image {
	max-width: 100%;
	height: 196rpx;
	border-radius: 10rpx;
	-o-object-fit: cover;
	   object-fit: cover;
	-o-object-position: right top;
	   object-position: right top;
}
.mvListT .item .playBtn {
	left: 40rpx;
	top: 40rpx;
	width: 50rpx;
	height: 50rpx;
}
.mvListT .item .playBtn .icon {
	margin: 16rpx 0rpx 0rpx 18rpx;
	border-top: 10rpx solid transparent;
	border-bottom: 10rpx solid transparent;
	border-left: 20rpx solid #e91e63;
}


.left-tab .tab-title {
	text-align: center;
}
.left-tab .tab-title .item {
	display: inline-block;
	-webkit-box-shadow: 0 0 10px hsla(0, 0%, 50%, 0.1);
	        box-shadow: 0 0 10px hsla(0, 0%, 50%, 0.1);
	text-align: center;
	font-size: 26rpx;
	padding: 20rpx 40rpx;
	margin: 0rpx 20rpx 30rpx;
	border-radius: 10rpx;
	color: #888;
}
.left-tab .tab-title .item.active {
	background: #e91e63;
	color: #fff;
}

