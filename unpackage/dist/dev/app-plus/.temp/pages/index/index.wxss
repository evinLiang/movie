@import "../../common/vendor.wxss";

.banner swiper {
  height: 236rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.banner swiper swiper-item {
  padding: 0rpx 5rpx;
  box-sizing: border-box;
}
.banner image {
  width: 100%;
  height: 236rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10px hsla(0, 0%, 51%, .1);
}
.personalizedList,
.topMvList,
.toplistArtistList {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.personalizedList .item {
  position: relative;
  z-index: 1;
  width: 240rpx;
  height: 240rpx;
  margin-right: 12rpx;
}
.personalizedList .item .name {
  position: absolute;
  z-index: 2;
  color: #fff;
  left: 0rpx;
  bottom: 0rpx;
  font-size: 20rpx;
  padding: 10rpx;
  background: rgba(0, 0, 0, 0.3);
  width: 100%;
  min-height: 76rpx;
  box-sizing: border-box;
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}
.personalizedList .item image,
.topMvList .item image {
  max-width: 100%;
  height: 240rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10px hsla(0, 0%, 51%, .1);
}
.topMvList .item {
  position: relative;
  z-index: 1;
  width: 426rpx;
  height: 240rpx;
  margin-right: 12rpx;
}
.topMvList .item .name {
  position: absolute;
  z-index: 2;
  color: #fff;
  left: 0rpx;
  bottom: 0rpx;
  font-size: 10px;
  padding: 15rpx;
  background: rgba(0, 0, 0, 0.3);
  width: 100%;
  box-sizing: border-box;
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}
.toplistArtistList .item {
  position: relative;
  z-index: 1;
  width: 150rpx;
  height: 150rpx;
  line-height: 142rpx;
  text-align: center;
  margin-right: 20rpx;
}
.toplistArtistList .item image {
  max-width: 100%;
  height: 150rpx;
  border-radius: 50%;
  box-shadow: 0 0 10px hsla(0, 0%, 51%, .1);
  vertical-align: middle;
}
.toplistArtistList .item .name {
  position: absolute;
  z-index: 2;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
  border-radius: 50%;
  font-size: 10px;
}